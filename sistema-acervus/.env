NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://usuario:senha@localhost:5432/sistema_estagio"

# JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui

# Frontend
FRONTEND_URL=http://localhost:3000

# Email (para notificações)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app

# APIs externas
RECEITA_FEDERAL_API_URL=https://www.receitaws.com.br/v1
VIACEP_API_URL=https://viacep.com.br/ws

# docker-compose.yml
version: '3.8'

services:
  postgres:
    image: postgres:15
    container_name: sistema_estagio_db
    environment:
      POSTGRES_USER: sistema_estagio
      POSTGRES_PASSWORD: sistema123
      POSTGRES_DB: sistema_estagio
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./scripts/init-db.sql:/docker-entrypoint-initdb.d/init-db.sql

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: sistema_estagio_backend
    environment:
      DATABASE_URL: postgresql://sistema_estagio:sistema123@postgres:5432/sistema_estagio
      JWT_SECRET: sistema_estagio_jwt_secret_2025
      NODE_ENV: production
    ports:
      - "3001:3001"
    depends_on:
      - postgres
    volumes:
      - ./backend/uploads:/app/uploads

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: sistema_estagio_frontend
    ports:
      - "80:80"
    depends_on:
      - backend

volumes:
  postgres_data:

# backend/Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./
RUN npm ci --only=production

# Copiar código fonte
COPY . .

# Gerar Prisma Client
RUN npx prisma generate

# Build do TypeScript
RUN npm run build

# Criar diretório de uploads
RUN mkdir -p uploads

EXPOSE 3001

# Comando para iniciar
CMD ["sh", "-c", "npx prisma migrate deploy && npm start"]

# frontend/Dockerfile
FROM cirrusci/flutter:stable AS build

WORKDIR /app

# Copiar pubspec files
COPY pubspec.* ./
RUN flutter pub get

# Copiar código fonte
COPY . .

# Build para web
RUN flutter build web --release

# Nginx para servir o app
FROM nginx:alpine

# Copiar build do Flutter
COPY --from=build /app/build/web /usr/share/nginx/html

# Configuração customizada do nginx
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

# frontend/nginx.conf
events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    server {
        listen       80;
        server_name  localhost;

        location / {
            root   /usr/share/nginx/html;
            index  index.html index.htm;
            try_files $uri $uri/ /index.html;
        }

        # API proxy
        location /api/ {
            proxy_pass http://backend:3001/api/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/share/nginx/html;
        }
    }
}